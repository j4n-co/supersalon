<h2><%= Spree.t('shipment_mailer.confirm_email.dear_customer') %> <%= @shipment.order.name %></h2>

<p><%= Spree.t('shipment_mailer.shipped_email.instructions') %></p>

<%= Spree.t('shipment_mailer.shipped_email.shipment_description', :stock_location => @shipment.stock_location.name, :shipment_method => @shipment.shipping_method.name) %>


<h3><%= Spree.t('shipment_mailer.shipped_email.shipment_summary') %></h3>
<table> 
	<tr> 
		<td class="bottom-border"> 
			Item
		</td>
		<td class="bottom-border"> 
			Quantity
		</td>
	</tr>

<% @shipment.manifest.each do |item| %>
  <tr> 
  	<td> 
 		<%= item.variant.product.name %> <%= item.variant.options_text %>
  	</td>
  	<td> 
		<%= item.quantity %> 
  	</td>
  </tr>
<% end %>
</table>

<p><strong><%= Spree.t('shipment_mailer.shipped_email.track_information', :tracking => @shipment.tracking)     if @shipment.tracking %></strong></p>
<p><strong><%= Spree.t('shipment_mailer.shipped_email.track_link',        :url      => @shipment.tracking_url) if @shipment.tracking_url %></strong></p>

<p><%= Spree.t('shipment_mailer.shipped_email.thanks') %></p>

<em><%= Spree.t('shipment_mailer.shipped_email.assistance') %></em>