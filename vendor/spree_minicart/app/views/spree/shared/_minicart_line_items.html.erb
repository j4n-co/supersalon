<li <%= cycle('', 'class="alt"') %>>
  <% if variant.images.length == 0 %>
    <%= link_to small_image(variant.product), variant.product, :'data-hook'=>"minicart_item_image", :class=>"minicart_item_image" %>
  <% else %>
    <%= link_to image_tag(variant.images.first.attachment.url(:small)), variant.product,  :'data-hook'=>"minicart_item_image", :class=>"minicart_item_image" %>
  <% end %>

  <div class='minicart-actions' data-hook="minicart_item_actions">
    <div data-hook="minicart_item_quantity">
      <%= item_form.hidden_field :quantity, :min => 0, :class => "line_item_quantity" %>
    </div>
    <div data-hook="minicart_item_delete">
      <%= link_to raw('&#215;'), '#', :class => 'delete', :id => "delete_#{dom_id(line_item)}" %>
    </div>
  </div>
</li>
