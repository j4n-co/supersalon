<% content_for :page_title do %>
  <%= (Spree.t('admin.pages.editing_page') + " &ldquo;#{@page.title}&rdquo;").html_safe %>
<% end %>

<% content_for :sidebar_title do %>
  <%= Spree.t('admin.pages.page_information') %>
<% end %>

<% content_for :sidebar do %>

  <header id="page_tab_summary" data-hook>
    <dl class="additional-info">
      <dt id="page_accessible" data-hook><%= Spree.t(:page_accessible) %>:</dt>
      <dd><%= @page.accessible ? "<span class='state complete'>Accessible</span>".html_safe : "<span class='state pending'>Not Accessible</span>".html_safe %></dd>
      <dt data-hook><%= Spree.t(:page_visible) %>:</dt>
      <dd id='page_visible'><%= @page.visible ? "<span class='state complete'>Visible</span>".html_safe : "<span class='state pending'>Hidden</span>".html_safe %></dd>
    </dl>
  </header>

  <nav class="menu">
    <ul class="sidebar post-menu">
      <li<%== ' class="active"' if current == Spree.t('admin.pages.page_details') %>>
        <%= link_to Spree.t('admin.pages.page_details'), edit_admin_page_url(@page) %>
      </li>
      <li<%== ' class="active"' if current == "Contents" %>>
        <%= link_to Spree.t('admin.pages.contents'), admin_page_contents_url(@page) %>
      </li>
      <li<%== ' class="active"' if current == "Images" %>>
        <%= link_to Spree.t('admin.pages.images'), admin_page_images_url(@page) %>
      </li>
    </ul>
  </nav>

<% end %>
