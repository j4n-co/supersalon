<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t('admin.blogs.new_blog') %>
<% end %>

<% content_for :page_actions do %>
  <li id="manage_blogs_link">
    <%= button_link_to Spree.t('admin.blogs.manage_blogs'), admin_blogs_url, :icon => 'icon-file', :id => 'admin_manage_blogs' %>
  </li>
<% end %>

<% if @blog.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @blog %>
<% end %>

<%= form_for([:admin, @blog]) do |f| %>
  <fieldset class="no-border-top">
    <%= render "form", :form => f %>
    <div class="filter-actions actions">
      <%= button Spree.t(:create), 'icon-ok' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t(:cancel), admin_blogs_path, :icon => 'icon-remove' %>
    </div>
  </fieldset>
<% end %>

<%= render "spree/admin/shared/select_configuration_tab" unless request.xhr? %>
