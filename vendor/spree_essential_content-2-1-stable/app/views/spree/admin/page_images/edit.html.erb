<%= render :partial => 'spree/admin/shared/page_tabs', :locals => {:current => "Images"} %>

<% if @page_image.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @page_image %>
<% end %>

<%= form_for([:admin, @page.id, @page_image], :url => admin_page_image_url(@page, @page_image), :html => { :multipart => true }) do |f| %>
  <fieldset>
    <legend><%= (Spree.t(:editing_image) + " - #{@page_image.attachment_file_name}").html_safe %></legend>

    <div class="field">
      <%= label_tag (:preview) %>
      <div style="text-align:center;">
        <%= link_to(image_tag(@page_image.attachment.url(:medium)), @page_image.attachment.url(:large)) %>
      </div>
    </div>
    <%= render "form", :form => f %>

    <div class="filter-actions actions">
      <%= button Spree.t(:update), 'icon-refresh' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t(:cancel), admin_page_images_url(@page), :icon => 'icon-remove', :id => "cancel_link" %>
    </div>
  </fieldset>
<% end %>
