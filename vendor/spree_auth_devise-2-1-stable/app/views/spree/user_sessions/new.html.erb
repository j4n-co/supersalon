<% @body_id = 'login' %>
<div id="existing-customer">
  <h1 style="text-align: center;"><%= Spree.t(:login_as_existing) %></h1>
  <div data-hook="login" class="existing-login">
	<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
	  <div id="password-credentials">
	    <p>
	      <%= f.label :email, Spree.t(:email) %><br />
	      <%= f.email_field :email, :class => 'title', :tabindex => 1 %>
	    </p>

	    <p>
	      <%= f.label :password, Spree.t(:password) %><br />
	      <%= f.password_field :password, :class => 'title', :tabindex => 2 %>
	    </p>
	    <p style="margin-top: 0.1em;">
	    <%= f.label :remember_me, Spree.t(:remember_me) %>
	    <%= f.check_box :remember_me %>
	    </p>
	  </div>
	  <p style="margin-top:0.2em;">
	   	  <%= f.submit Spree.t(:login), :class => 'button primary', :tabindex => 3 %>
	  </p>
	<% end %>


    <h2 style="margin-bottom:0.3em;"><%= Spree.t(:or) %></h2>
    <%= link_to Spree.t(:create_a_new_account), spree.signup_path %> |
    <%= link_to Spree.t(:forgot_password), spree.recover_password_path %>
  </div>
</div>
<div data-hook="login_extras"></div>
