<% @body_id = 'cart' %> 
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
<h1 style="text-align:center;"><%= Spree.t(:registration) %></h1>

<div id="account" data-hook>
  <h2><%= Spree.t(:login_as_existing) %></h2>
  <div data-hook="login">
    <%= render :partial => 'spree/shared/login' %>
  </div>
</div>

<div id="guest_checkout">
  <h2><%= Spree.t(:guest_user_account) %></h2>

  <%= form_for @order, :url => update_checkout_registration_path, :method => :put, :html => { :id => 'checkout_form_registration' } do |f| %>
    <%= f.label :email, Spree.t(:email) %><br />
    <%= f.email_field :email, :class => 'title' %>
    <p style="margin-top: 1em;">
      <%= f.submit Spree.t(:checkout), :class => 'button primary' %>
    </p>
    <p style="margin-top: 1em;">
      <%= link_to Spree.t(:create_a_new_account), spree.signup_path %>
    </p>
  <% end %>
